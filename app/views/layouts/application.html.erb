<!DOCTYPE html>
<html>
  <head>
    <title>Restaurantreview</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h1>Welcome to Restaurant Review App</h1>
    <hr>
    <nav>
      <% if @current_user.present? %>

        <%= link_to "#{@current_user.first_name} #{@current_user.last_name}",  profile_path %>
         |
         <%= link_to 'Logout', login_path, method: :delete %>
         <% else %>
         <%= link_to 'Login', login_path %>
      <% end %>
    </nav>
    <%= yield %>

    <footer>
      <hr>
     &copy; 2018 Project 1 - Alex Pham
    </footer>
  </body>
</html>
