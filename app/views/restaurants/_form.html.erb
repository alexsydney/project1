
<strong><%= flash[:errors] %></strong>

<% if flash[:error_messages].present? %>
  <ol>
    <% flash[:error_messages].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ol>
<% end %>

<%= form_for @restaurant do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %> <!-- give us  -->
