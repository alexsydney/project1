  <fieldset>
    <%= f.label :address %>
    <%= f.text_field :address %> <!-- give us  -->
  </fieldset>
  <fieldset>
    <%= f.label :location %>
    <%= f.text_field :location %> <!-- give us  -->
  </fieldset>
  <fieldset>
    <%= f.label :url_website %>
    <%= f.text_field :url_website %> <!-- give us  -->
